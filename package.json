{
  "name": "modularisan",
  "version": "1.0.0",
  "description": "A framework-agnostic CLI tool for generating modular, scalable code structures inspired by Laravel modules. Supports Next.js, Nuxt.js, Nest.js, and more.",
  "main": "dist/index.js",
  "bin": {
    "modularisan": "dist/index.js",
    "misan": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-stubs",
    "copy-stubs": "cp -r src/stubs dist/",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run build",
    "publish": "npm publish --access public",
    "check-stubs": "ts-node scripts/check-stubs.ts",
    "init:config": "ts-node src/commands/init.ts"
  },
  "keywords": [
    "cli", "generator", "scaffold", "modular", "ddd", "feature-driven",
    "next.js", "nuxt.js", "nest.js", "react", "vue", "svelte", "angular",
    "laravel-modules", "architecture", "microservices", "monorepo"
  ],
  "author": "Ifeoluwa Adewunmi (https://github.com/ife-adewunmi)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ife-adewunmi/modularisan.git"
  },
  "bugs": {
    "url": "https://github.com/ife-adewunmi/modularisan/issues"
  },
  "homepage": "https://github.com/ife-adewunmi/modularisan#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "ejs": "^3.1.9",
    "figlet": "^1.7.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1",
    "pluralize": "^8.0.0",
    "semver": "^7.5.4",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "@types/pluralize": "^0.0.33",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

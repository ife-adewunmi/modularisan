  ...validators: ((values: <%= pascalName %>FormValues) => string | Partial<<%= pascalName %>FormErrors>)[]
) {
  return (values: <%= pascalName %>FormValues): <%= pascalName %>FormErrors => {
    const errors: <%= pascalName %>FormErrors = {};

    for (const validator of validators) {
      const result = validator(values);

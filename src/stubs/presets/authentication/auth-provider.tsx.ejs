'use client'; // For Next.js

import React, { createContext, useContext, useEffect, useState } from 'react';
import type { <%= pascalName %>AuthContext, <%= pascalName %>User } from '../types';
import { authService } from '../services/<%= kebabName %>-service';

const AuthContext = createContext<<%= pascalName %>AuthContext | undefined>(undefined);

export interface <%= pascalName %>ProviderProps {
  children: React.ReactNode;
}

export function <%= pascalName %>Provider({ children }: <%= pascalName %>ProviderProps) {
  const [user, setUser] = useState<<%= pascalName %>User | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  useEffect(() => {
    const initializeAuth = async () => {
      try {
        await authService.initialize();
        const currentUser = authService.getCurrentUser();
        setUser(currentUser);
      } catch (err) {
        setError((err as Error).message);
      } finally {
        setIsLoading(false);
      }
    };

    initializeAuth();
  }, []);

  const login = async (email: string, password: string) => {
    setIsLoading(true);
    setError(null);
    try {
      const result = await authService.login(email, password);
      if (result.success) {
        setUser(authService.getCurrentUser());
      } else {
        setError(result.error || 'Login failed');
      }
    } catch (err) {
      setError((err as Error).message);
    } finally {
      setIsLoading(false);
    }
  };

  const register = async (email: string, password: string, name: string) => {
    setIsLoading(true);
    setError(null);
    try {
      const result = await authService.register(email, password, name);
      if (result.success) {
        setUser(authService.getCurrentUser());
      } else {
        setError(result.error || 'Registration failed');
      }
    } catch (err) {
      setError((err as Error).message);
    } finally {
      setIsLoading(false);
    }
  };

  const logout = async () => {
    setIsLoading(true);
    try {
      await authService.logout();
      setUser(null);
    } catch (err) {
      setError((err as Error).message);
    } finally {
      setIsLoading(false);
    }
  };

  const refreshToken = async () => {
    try {
      const success = await authService.refreshToken();
      if (success) {
        setUser(authService.getCurrentUser());
      }
      return success;
    } catch (err) {
      setError((err as Error).message);
      return false;
    }
  };

  const value: <%= pascalName %>AuthContext = {
    user,
    isAuthenticated: authService.isAuthenticated(),
    isLoading,
    error,
    login,
    register,
    logout,
    refreshToken,
  };

  return <AuthContext.Provider value={value}>{children}</AuthContext.Provider>;
}

export function use<%= pascalName %>Auth() {
  const context = useContext(AuthContext);
  if (!context) {
    throw new Error(`use<%= pascalName %>Auth must be used within <%= pascalName %>Provider`);
  }
  return context;
}
